<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello" />

    <Button
        android:id="@+id/mainGetStartedButton"
        android:layout_width="410dp"
        android:layout_height="44dp"
        android:layout_below="@+id/mainTitleText"
        android:layout_marginTop="28dp"
        android:text="Take a Photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/mainUploadPhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainGetStartedButton"
        android:layout_marginTop="36dp"
        android:text="Upload Image"
        app:layout_constraintTop_toBottomOf="@+id/mainGetStartedButton"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/mainCameraImage"
        android:layout_width="299dp"
        android:layout_height="312dp"
        android:layout_below="@+id/mainGetStartedButton"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/mainUploadPhotoButton"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/mainNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/mainCameraImage"
        tools:layout_editor_absoluteX="160dp" />


</androidx.constraintlayout.widget.ConstraintLayout>